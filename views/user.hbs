<div>
    <h1>Hello Administrator {{username}}</h1>
    <table>
        <tr>
            <th>Eagle ID</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Availability</th>
        </tr>
        {{#each checkedbooks}}
        <tr>
            <td>{{this.eid}}</td>
            <td>{{this.title}}</td>
            <td>{{this.ISBN}}</td>
            <td>{{this.book_status}}</td>
            <td><form action="/availability" method="POST">
                <input type="submit" id="{{this.ISBN}}" name="button" value="Change Availability">
            </form></td>
        </tr>
        {{/each}}
    </table>
</div>