<div>
    <form action="/search/" method="get">
        <input type="text" placeholder="Search Books" name="q">
        <input type="submit" value="Search"><br>
        <input type="radio" id="ISBN" name="filter" value="ISBN">
        <label for="ISBN">ISBN</label>
        <input type="radio" id="title" name="filter" value="Title">
        <label for="title">Title</label>
        <input type="radio" id="author" name="filter" value="Author">
        <label for="author">Author</label>
        <input type="radio" id="genre" name="filter" value="Genre">
        <label for="genre">Genre</label>
    </form>
</div>
<div>
    <table>
        <tr>
            <th>Title</th>
            <th>author</th>
            <th>ISBN</th>
            <th>Availability</th>
        </tr>
        {{#each results}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.author}}</td>
            <td>{{this.ISBN}}</td>
            <td>{{this.genre}}</td>
            <td>{{this.book_status}}</td>
        </tr>
        {{/each}}
    </table>
</div>